# Configurações do Frontend para Railway
VITE_NODE_ENV=production

# URLs do Backend (Railway irá fornecer automaticamente)
VITE_API_URL=https://$RAILWAY_STATIC_URL
VITE_SERVER_URL=https://$RAILWAY_STATIC_URL

# WebSocket URL
VITE_WS_URL=wss://$RAILWAY_STATIC_URL

# Configurações de Build
VITE_BUILD_MODE=production
VITE_APP_TITLE="Sistema ZARA - Operações"

# Firebase (se usado no frontend)
VITE_FIREBASE_API_KEY=$VITE_FIREBASE_API_KEY
VITE_FIREBASE_AUTH_DOMAIN=$VITE_FIREBASE_AUTH_DOMAIN
VITE_FIREBASE_PROJECT_ID=$VITE_FIREBASE_PROJECT_ID

# Sentry (se usado no frontend)
VITE_SENTRY_DSN=$VITE_SENTRY_DSN

# Timezone
VITE_TZ=America/Sao_Paulo