# Configurações do Servidor
PORT=5000
NODE_ENV=development

# HTTPS Configuration
HTTPS_ENABLED=false
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem
SSL_CA_PATH=./certs/ca.pem

# Backup Configuration
BACKUP_DIR=./backups
MAX_BACKUPS=7
BACKUP_SCHEDULE=0 2 * * *

# Banco de Dados MongoDB
MONGODB_URI=mongodb://localhost:27017/zara_operacao
DATABASE_URL="mongodb://localhost:27017/zara_operacao"

# JWT
JWT_SECRET=sua_chave_secreta_jwt_muito_segura_aqui
JWT_EXPIRES_IN=7d

# Redis
REDIS_URL=redis://localhost:6379

# Email (Nodemailer)
EMAIL_USER=seu_email@gmail.com
EMAIL_PASSWORD=sua_senha_app_gmail
EMAIL_FROM=noreply@zara-operacao.com

# Firebase Admin SDK
FIREBASE_PROJECT_ID=seu_projeto_firebase
FIREBASE_PRIVATE_KEY_ID=sua_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nSUA_CHAVE_PRIVADA_AQUI\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@seu-projeto.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=sua_client_id
FIREBASE_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40seu-projeto.iam.gserviceaccount.com

# Sentry (Monitoramento)
SENTRY_DSN=sua_dsn_sentry

# Upload de Arquivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# URLs
FRONTEND_URL=http://localhost:5173
CLIENT_URL=http://localhost:5173
SERVER_URL=http://localhost:5000

# Notificações
NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS=true
PUSH_NOTIFICATIONS=true

# Canais Externos de Notificação
# Twilio (SMS)
TWILIO_ACCOUNT_SID=seu_twilio_account_sid
TWILIO_AUTH_TOKEN=seu_twilio_auth_token
TWILIO_PHONE_NUMBER=+5511999999999

# WhatsApp Business API
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=seu_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=seu_phone_number_id

# Agendador de Tarefas
SCHEDULER_ENABLED=true
DAILY_REPORT_TIME=18:00
TEFLON_CHECK_INTERVAL=6