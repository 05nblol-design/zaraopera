# Configurações do Servidor para Railway
PORT=$PORT
NODE_ENV=production

# HTTPS Configuration
HTTPS_ENABLED=false

# Backup Configuration
BACKUP_DIR=./backups
MAX_BACKUPS=7
BACKUP_SCHEDULE=0 2 * * *

# Banco de Dados PostgreSQL (Railway)
DATABASE_URL=$DATABASE_URL

# JWT
JWT_SECRET=$JWT_SECRET
JWT_EXPIRES_IN=7d

# Redis (Railway)
REDIS_URL=$REDIS_URL

# Email (SendGrid)
SENDGRID_API_KEY=$SENDGRID_API_KEY
EMAIL_FROM=noreply@zara-operacao.com

# Firebase Admin SDK
FIREBASE_PROJECT_ID=$FIREBASE_PROJECT_ID
FIREBASE_PRIVATE_KEY_ID=$FIREBASE_PRIVATE_KEY_ID
FIREBASE_PRIVATE_KEY=$FIREBASE_PRIVATE_KEY
FIREBASE_CLIENT_EMAIL=$FIREBASE_CLIENT_EMAIL
FIREBASE_CLIENT_ID=$FIREBASE_CLIENT_ID
FIREBASE_CLIENT_CERT_URL=$FIREBASE_CLIENT_CERT_URL

# Sentry (Monitoramento)
SENTRY_DSN=$SENTRY_DSN

# Upload de Arquivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# URLs (Railway irá fornecer automaticamente)
FRONTEND_URL=https://$RAILWAY_STATIC_URL
CLIENT_URL=https://$RAILWAY_STATIC_URL
SERVER_URL=https://$RAILWAY_STATIC_URL

# Configurações adicionais para Railway
RAILWAY_ENVIRONMENT=production
TZ=America/Sao_Paulo