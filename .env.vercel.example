# Configurações do Vercel para Sistema ZARA
# Copie este arquivo e configure as variáveis no painel do Vercel

# === CONFIGURAÇÕES GERAIS ===
NODE_ENV=production
PORT=3000

# === BANCO DE DADOS (Railway PostgreSQL) ===
# Esta URL será fornecida pelo Railway após criar o banco PostgreSQL
DATABASE_URL=postgresql://username:password@hostname:port/database
DB_HOST=hostname.railway.app
DB_PORT=5432
DB_NAME=railway
DB_USER=postgres
DB_PASSWORD=your_password

# === REDIS (Railway Redis) ===
# Esta URL será fornecida pelo Railway após criar o Redis
REDIS_URL=redis://default:password@hostname:port

# === AUTENTICAÇÃO ===
JWT_SECRET=seu_jwt_secret_muito_seguro_aqui
JWT_EXPIRES_IN=7d

# === EMAIL (SendGrid ou SMTP) ===
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASS=sua_api_key_sendgrid
EMAIL_FROM=noreply@zara-operacao.com
EMAIL_FROM_NAME=Zara Operação

# === FIREBASE (Notificações Push) ===
FIREBASE_PROJECT_ID=zara-operacao-xxxxx
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nSUA_CHAVE_PRIVADA_AQUI\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@zara-operacao-xxxxx.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=sua_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40zara-operacao-xxxxx.iam.gserviceaccount.com

# === FRONTEND (Variáveis VITE) ===
VITE_API_URL=https://seu-projeto.vercel.app/api
VITE_SOCKET_URL=https://seu-projeto.vercel.app
VITE_APP_TITLE="Sistema ZARA - Operações"
VITE_APP_VERSION=1.0.1

# === FIREBASE FRONTEND ===
VITE_FIREBASE_API_KEY=sua_api_key_firebase
VITE_FIREBASE_AUTH_DOMAIN=zara-operacao-xxxxx.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=zara-operacao-xxxxx
VITE_FIREBASE_STORAGE_BUCKET=zara-operacao-xxxxx.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# === TWILIO (SMS - Opcional) ===
TWILIO_ACCOUNT_SID=seu_account_sid
TWILIO_AUTH_TOKEN=seu_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# === SENTRY (Monitoramento - Opcional) ===
SENTRY_DSN=https://sua_dsn@sentry.io/projeto

# === CONFIGURAÇÕES DE PRODUÇÃO ===
CORS_ORIGIN=https://seu-projeto.vercel.app
SESSION_SECRET=seu_session_secret_aqui
ENCRYPTION_KEY=sua_chave_encriptacao_32_chars

# === CONFIGURAÇÕES DO VERCEL ===
VERCEL=1
VERCEL_URL=$VERCEL_URL
VERCEL_ENV=$VERCEL_ENV